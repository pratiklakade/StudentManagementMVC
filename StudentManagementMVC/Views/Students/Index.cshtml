@*@model IEnumerable<StudentManagementMVC.Models.Student>*@
@using PagedList.Mvc;
@model PagedList.IPagedList<StudentManagementMVC.Models.Student>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.First().FullName)</th>
        <th>@Html.DisplayNameFor(model => model.First().Age)</th>
        <th>@Html.DisplayNameFor(model => model.First().Email)</th>
        <th>@Html.DisplayNameFor(model => model.First().EnrollmentDate)</th>
        <th>@Html.DisplayNameFor(model => model.First().Course)</th>
        <th>@Html.DisplayNameFor(model => model.First().Semester)</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentDate)
            </td>
            <td>@Html.DisplayFor(modelItem => item.Course)</td>
            <td>@Html.DisplayFor(modelItem => item.Semester)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

</table>

<div>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>

